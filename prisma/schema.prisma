// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model webUser {
  id             Int      @id @default(autoincrement())
  fullname       String?
  email          String?  @unique
  hashedPassword String?
  isAdmin        Boolean?
  emailVerified  Boolean?
  createdAt      DateTime @default(now())
}

model priceSheet {
  id        Int     @id @default(autoincrement())
  partNo    String?
  partName  String?
  partModel String?
  partPrice String?
}

model JobCard {
  SerialNo           Int      @id @default(autoincrement())
  CustomerName       String?
  DriverUser         String?
  CellNo             String?
  JobCheckedBy       String?
  WorkType           String?
  Insurance          String?
  WorkOrder          String?
  CashWorks          String?
  RegistrationNumber String?
  Fuel               String?
  Mileage            String?
  Lighter            Boolean?
  Ashtray            Boolean?
  FloorMats          Boolean?
  OriginalBook       Boolean?
  SeatCovers         Boolean?
  RadioAntena        Boolean?
  SpareWheel         Boolean?
  WheelRod           Boolean?
  JackHandle         Boolean?
  Tools              Boolean?
  ExtraThings        Boolean?
  FrameNo            String?
  BatteryNumber      String?
  In                 Json?
  Out                Json?
}

model EstimatedCostWork {
  id                  Int     @id @default(autoincrement())
  customerName        String?
  cellNo              String?
  requiredWorkDetails String?
}
