// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model webUser {
  id             Int      @id @default(autoincrement())
  fullname       String?
  email          String?  @unique
  hashedPassword String?
  isAdmin        Boolean?
  emailVerified  Boolean?
  createdAt      DateTime @default(now())
}

model JobCard {
  SerialNo                 Int      @id @default(autoincrement())
  isEstimate               Boolean? // It will become true as soon as estimate is created for this job card.
  EstimateNumber           Int? // Once user creates estimate he'll have to link that estimate with this job card
  CustomerName             String?
  DriverUser               String?
  CellNo                   String?
  Make                     String?
  Model                    String?
  JobCheckedBy             String?
  WorkType                 String?
  Insurance                String?
  Status                   String?
  carRegistration          String?
  RequiredWorkDetails      String?
  AdditionalWorkDetails    String?
  OtherAddionalWorkDetails String?
  Fuel                     String?
  Mileage                  String?
  Lighter                  Boolean?
  Ashtray                  Boolean?
  FloorMats                Boolean?
  OriginalBook             Boolean?
  SeatCovers               Boolean?
  RadioAntena              Boolean?
  SpareWheel               Boolean?
  WheelRod                 Boolean?
  JackHandle               Boolean?
  Tools                    Boolean?
  ExtraThings              Boolean?
  FrameNo                  String?
  BatteryNumber            String?
  InReceivedBy             String?
  InReceivedFrom           String?
  InTime                   String?
  OutTime                  String?
  OutReceivedBy            String?
  OutReceivedFrom          String?
  CreatedAt                String?
}

model EstimatedCostWork {
  id                     Int     @id @default(autoincrement())
  jobId                  Int? // If this job id exists it means this estimate can be shown if a user opens job card with this id 
  cName                  String?
  cMake                  String?
  cModel                 String?
  cRegistration          String?
  cSurveyor              String?
  cDriverUser            String?
  cSurveyorNTN           String?
  Insurance              String?
  cKiloMeters            Float?
  TotalServiceFee        Float?
  TotalEstimateFee       Float?
  PaymentMode            String?
  EstimateTableData      Json?
  ServicesTableData      Json?
  DiscountServices       Float?
  DiscountEstimate       Float?
  DiscountServicesFigure Float?
  DiscountEstimateFigure Float?
  OverAllAmount          Float?
  isRoyal                String?
  CreatedAt              String?
}

model PriceSheet {
  id              Int     @id @default(autoincrement())
  partNo          String?
  partDescription String?
  partModel       String?
  partPrice       String?
}

model Invoice {
  id               Int     @id @default(autoincrement())
  customerName     String?
  customerContact  String?
  NTN              String?
  carColor         String?
  carRegistration  String?
  Mileage          String?
  dateTime         String?
  descriptionPrice Json?
}

model InsuranceCompanies {
  id   Int     @id @default(autoincrement())
  name String? @unique
}

model Surveyors {
  id           Int     @id @default(autoincrement())
  cSurveyor    String? @unique
  cSurveyorNTN String? @unique
}
