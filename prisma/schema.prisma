// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model webUser {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  fullname       String?
  email          String?  @unique
  hashedPassword String?
  isAdmin        Boolean?
  emailVerified  Boolean?
  createdAt      DateTime @default(now())
}

model priceSheet {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  partNo    String?
  partName  String?
  partModel String?
  partPrice String?
}

model JobCard {
  SerialNo            String                @id @default(auto()) @map("_id") @db.ObjectId
  CustomerName        String?
  DriverUser          String?
  CellNo              String?
  JobCheckedBy        String?
  WorkType            String?
  Insurance           String?
  WorkOrder           String?
  CashWorks           String?
  RegistrationNumber  String?
  RequiredWorkDetails Json?
  OtherAdditionalWork String?
  Fuel                String?
  Mileage             String?
  Lighter             Boolean?
  Ashtray             Boolean?
  FloorMats           Boolean?
  OriginalBook        Boolean?
  SeatCovers          Boolean?
  RadioAntena         Boolean?
  SpareWheel          Boolean?
  WheelRod            Boolean?
  JackHandle          Boolean?
  Tools               Boolean?
  ExtraThings         Boolean?
  FrameNo             String?
  BatteryNumber       String?
  In                  String?
  Out                 String?
}