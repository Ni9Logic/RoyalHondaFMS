// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model webUser {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  fullname       String?
  email          String?  @unique
  hashedPassword String?
  isAdmin        Boolean?
  emailVerified  Boolean?
  createdAt      DateTime @default(now())
}

model priceSheet {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  partNo    String?
  partName  String?
  partModel String?
  partPrice String?
}

model JobCard {
  SerialNo            String                @id @default(auto()) @map("_id") @db.ObjectId
  CustomerName        String?
  DriverUser          String?
  CellNo              String?
  JobCheckedBy        String?
  WorkType            String?
  Insurance           String?
  WorkOrder           String?
  CashWorks           String?
  RegistrationNumber  String?
  RequiredWorkDetails Json?
  OtherAdditionalWork String?
  Fuel                String?
  Mileage             String?
  Lighter             String?
  Ashtray             String?
  FloorMats           String?
  OriginalBook        String?
  SeatCovers          String?
  RadioAntena         String?
  SpareWheel          String?
  WheelRod            String?
  JackHandle          String?
  Tools               String?
  ExtraThings         String?
  FrameNo             String?
  BatteryNumber       String?
  In                  String?
  Out                 String?
}